<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:alpha="0.7"
    android:background="@color/black"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:columnCount="4"
            android:orientation="horizontal"
            android:padding="@dimen/margin_10"
            android:rowCount="3">

            <LinearLayout>

                <ImageView
                    android:id="@+id/lotto_image_number_prize"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/prize1" />

                <TextView
                    android:id="@+id/lotto_text_number_prize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="1"
                    android:layout_gravity="center"
                    android:layout_rowSpan="3"
                    android:text="@string/first_prize"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lotto_text_total_prize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="1"
                    android:text="1,000,000"
                    android:textColor="@color/white"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/lotto_text_total_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnSpan="1"
                        android:text="1"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" | "
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/lotto_text_per_prize"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_columnSpan="1"
                        android:text="1,000,000"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>

        </GridLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>