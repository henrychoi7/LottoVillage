<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/margin_10">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:orientation="horizontal"
            android:padding="@dimen/margin_10"
            android:rowCount="3">

            <TextView
                android:id="@+id/lotto_text_number_prize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="1"
                android:layout_gravity="center"
                android:layout_rowSpan="3"
                android:text="@string/first_prize"
                android:textColor="@color/colorAccentDark"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="1"
                android:text="@string/total_prize"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/lotto_text_total_prize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="1"
                android:textColor="@color/colorAccent"
                android:text="1,000,000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="1"
                android:text="@string/total_number"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/lotto_text_total_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:layout_columnSpan="1"
                android:text="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="1"
                android:text="@string/per_prize"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/lotto_text_per_prize"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_columnSpan="1"
                android:textColor="@color/colorAccent"
                android:text="1,000,000" />
        </GridLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>