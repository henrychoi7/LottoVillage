<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_animation_progress"
        android:layout_width="@dimen/lottie_animation_size"
        android:layout_height="@dimen/lottie_animation_size"
        android:layout_centerInParent="true"
        app:lottie_autoPlay="true"
        app:lottie_cacheStrategy="strong"
        app:lottie_fileName="splashy_loader.json"
        app:lottie_loop="true" />

    <TextView
        android:id="@+id/text_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        tools:text="@string/loading" />
</RelativeLayout>