<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="vertical"
    android:padding="@dimen/margin_10">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:id="@+id/home_text_participation_background"
        android:padding="@dimen/margin_10">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp">

            <TextView
                android:id="@+id/home_text_participation_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/empty_participation_lotto_village"
                android:textColor="@color/white" />

            <LinearLayout
                android:id="@+id/home_linear_layout_participation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/home_text_participation_1"
                    style="@style/DefaultLottoNumberText" />

                <TextView
                    android:id="@+id/home_text_participation_2"
                    style="@style/DefaultLottoNumberText" />

                <TextView
                    android:id="@+id/home_text_participation_3"
                    style="@style/DefaultLottoNumberText" />

                <TextView
                    android:id="@+id/home_text_participation_4"
                    style="@style/DefaultLottoNumberText" />

                <TextView
                    android:id="@+id/home_text_participation_5"
                    style="@style/DefaultLottoNumberText" />

                <TextView
                    android:id="@+id/home_text_participation_6"
                    style="@style/DefaultLottoNumberText" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_text_participating_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                tools:text="2017-09-03 01:41" />

            <Button
                android:id="@+id/home_button_participation_lotto"
                style="@style/ParticipateButton" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>